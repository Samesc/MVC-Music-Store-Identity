@model IEnumerable<MVC_Music_Store_Identity.Models.Genre>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center activity">
                <h4><span class="activity-done">Categorías</span></h4>
            </div>
            <div class="mt-3">
                <ul class="list list-inline">
                    @foreach (var genre in Model)
                    {

                        <li class="d-flex justify-content-between p-2">
                            <div class="d-flex flex-row align-items-center">
                                <div class="ml-2">
                                    @Html.ActionLink(genre.Name,
                                    "Browse", "Store",
                                    new { Genre = genre.Name }, new { @class = "nav-link" })
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>